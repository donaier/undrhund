.text-content.member-form
  .row
    .columns.large-7
      %h2 Sign up
      = simple_form_for(@clan_member, url: registration_path(:clan_member)) do |f|
        = f.error_notification

        .form-inputs
          = f.input :username, required: true, placeholder: 'Name', label: false
          = f.input :password, required: true, placeholder: 'Password', label: false
          .row.collapse
            .columns.small-5
              %span.right.prefix http://www.steamcommunity.com/id/
            .columns.small-7
              = f.input :steam_link, label: false
          = f.input :frequency, collection: ClanMember::FREQUENCIES, as: :radio_buttons, label: 'How often do you play?'
          = f.input :current_rank, placeholder: 'optional', collection: ClanMember::RANKS
          = f.input :languages, placeholder: 'Languages spoken', label: false

        .form-actions
          = f.button :submit, "Sign up"

    .columns.large-4.large-offset-1
      %h2 Sing In
      %p Allready have an Account? Awesome!
      %p= link_to 'Sign in here', new_clan_member_session_path
