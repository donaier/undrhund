.text-content
  .row
    .columns
      %h2= "#{@clan_members.count} cool guys so far."
  .row.clan-members
    - @clan_members.each do |clan_member|
      .columns.large-6
        .row
          .columns.small-4.large-2
            = image_tag clan_member.avatar_image
          .columns.small-8.large-10
            %p
              - if current_clan_member
                = link_to clan_member.username, clan_member_path(clan_member)
              - else
                = clan_member.username
              - if clan_member.steam_link.present?
                = link_to "http://www.steamcommunity.com/id/#{clan_member.steam_link}", target: '_blank' do
                  = image_tag 'icons/steam.png', class: 'steam-icon'
