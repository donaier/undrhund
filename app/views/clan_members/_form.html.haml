= simple_form_for @clan_member do |f|
  = f.input :username, disabled: true, label: false
  .row.collapse
    .columns.small-5
      %span.right.prefix http://www.steamcommunity.com/id/
    .columns.small-7
      = f.input :steam_link, label: false
  = f.input :frequency, collection: ClanMember::FREQUENCIES, as: :radio_buttons
  = f.input :current_rank, placeholder: 'optional', collection: ClanMember::RANKS
  = f.input :languages

  = f.submit 'Save!'
