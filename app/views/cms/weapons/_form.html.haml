= simple_form_for([:cms, resource], wrapper: :bootstrap, html: { class: 'form-horizontal' } ) do |f|
  = f.error_notification

  .form-inputs
    = f.input :name
    = f.input :category, as: :select, collection: Weapon::CATEGORIES
    = f.input :available_ct
    = f.input :available_t
    = f.input :image
    = f.input :icon, disabled:true
    = f.input :price

  .form-actions
    = f.button :submit
