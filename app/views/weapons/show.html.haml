#guns
  .row
    .columns
      %h3= @weapon.name
  .row.weapon-info
    .columns.large-4.text-center
      = image_tag(@weapon.image, class: 'show-image')
    .columns.large-8
      %table
        %thead
          %tr
            %th Name:
            %th= @weapon.name
        %tbody
          %tr
            %td Category:
            %td= @weapon.category
          %tr
            %td Available CT:
            %td
              - if @weapon.available_ct
                = image_tag('icons/icon-oke.png')
              - else
                = image_tag('icons/icon-nope.png')
          %tr
            %td Available T:
            %td
              - if @weapon.available_t
                = image_tag('icons/icon-oke.png')
              - else
                = image_tag('icons/icon-nope.png')
          %tr
            %td Price:
            %td= "#{@weapon.price}$"
          %tr
            %td Steam Store:
            %td= link_to "All Items for #{@weapon.name}", "http://steamcommunity.com/market/search?q=#{@weapon.name}", target: '_blank'

  .row
    .columns
      %h3 Skins
  .row.tiles
    - @weapon.skins.each do |skin|
      = link_to 'steammarket' do
        .item.columns.small-6.large-2
          .skin-tile
            %h5= "#{@weapon.name} - #{skin.name}"
            = image_tag(skin.image)
            %table
              %thead
              %tbody
                %tr
                  %td Stattrak:
                  %td
                    - if skin.stattrak
                      = image_tag('icons/icon-oke.png')
                    - else
                      = image_tag('icons/icon-nope.png')
                %tr
                  %td Souvenir:
                  %td
                    - if skin.souvenir
                      = image_tag('icons/icon-oke.png')
                    - else
                      = image_tag('icons/icon-nope.png')
